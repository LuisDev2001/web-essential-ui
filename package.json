{
  "name": "web-essential-ui",
  "version": "1.1.0",
  "private": false,
  "type": "module",
  "description": "A versatile UI component library built with web components, ensuring compatibility across all modern web frameworks and environments. Perfect for seamless integration with Vue 3, TypeScript, and Tailwind CSS.",
  "files": [
    "dist"
  ],
  "module": "./dist/essential-webcomponents.js",
  "exports": {
    ".": {
      "import": "./dist/essential-webcomponents.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "build:types": "vue-tsc --declaration --emitDeclarationOnly -p tsconfig.build-types.json",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@floating-ui/vue": "^1.1.5",
    "iconify-icon": "^2.1.0",
    "vue": "^3.5.6"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.8.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tsconfig/node20": "^20.1.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.5.5",
    "@vitejs/plugin-vue": "^5.1.3",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.23.0",
    "jsdom": "^25.0.0",
    "npm-run-all2": "^6.2.0",
    "postcss": "^8.4.47",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.11",
    "typescript": "^5.6.2",
    "vite": "^5.4.5",
    "vite-plugin-vue-devtools": "^7.4.5",
    "vitest": "^2.1.1",
    "vue-tsc": "^2.1.6"
  },
  "keywords": [
    "vue",
    "javascript",
    "webcomponents",
    "ui",
    "frontend",
    "tailwindcss",
    "vite",
    "typescript"
  ]
}
